{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./examples"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": { 
      "@/*": ["./src/*"]
    },
    "types": ["@types/bun"]
  },
  "include": ["src", "examples"]
}